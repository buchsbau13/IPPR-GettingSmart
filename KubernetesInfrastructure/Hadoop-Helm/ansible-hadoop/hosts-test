### Hostfile 
# nfs storage for yarn and namenode
[nfs]
k8s-master ansible_host=10.0.0.100 ansible_user=root ansible_become=yes

[nfs:vars]
network=10.0.0.0/24

# datanodes for persistent volumes /opt/hadoop-cluster/hdfs/data
[datanodes]
k8s-worker1 ansible_host=10.0.0.101 ansible_user=root ansible_become=yes
k8s-worker2 ansible_host=10.0.0.102 ansible_user=root ansible_become=yes